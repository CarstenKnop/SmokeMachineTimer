{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PIO: Build (python -m platformio)",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"platformio",
				"run",
				"-d",
				"${workspaceFolder}\\FogMachineRemoteControl"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "PIO: Build (pio in PATH)",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"-d",
				"${workspaceFolder}\\FogMachineRemoteControl"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "PIO: Build (PlatformIO Core venv)",
			"type": "shell",
			"command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\platformio.exe",
			"args": [
				"run",
				"-d",
				"${workspaceFolder}\\FogMachineRemoteControl"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "Build FogMachineRemoteControl (PIO)",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"-d",
				"${workspaceFolder}\\FogMachineRemoteControl"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		}
	]
}