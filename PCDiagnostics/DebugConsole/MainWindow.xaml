<Window x:Class="SmokeMachineDiagnostics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smoke Machine Diagnostics" Height="720" Width="1200">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Connection controls -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <ComboBox x:Name="PortSelector" Width="200" MinWidth="160" Margin="0,0,12,0"/>
            <Button x:Name="RefreshPorts" Content="Refresh" Width="90" Click="RefreshPorts_OnClick" Margin="0,0,12,0"/>
            <Button x:Name="ConnectButton" Content="Connect" Width="110" Click="ConnectButton_OnClick" Margin="0,0,16,0"/>
            <Separator Width="10" Margin="8,0,16,0"/>
            <Button x:Name="PingButton" Content="Ping" Width="90" Click="PingButton_OnClick" Margin="0,0,12,0"/>
            <Button x:Name="GetRemoteStatsButton" Content="Get Remote Stats" Width="150" Click="GetRemoteStatsButton_OnClick" Margin="0,0,12,0"/>
            <Button x:Name="GetTimerStatsButton" Content="Get Timer Stats" Width="150" Click="GetTimerStatsButton_OnClick" Margin="0,0,12,0"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                <TextBlock VerticalAlignment="Center" Text="Channel:" Margin="0,0,6,0"/>
                <TextBox x:Name="ChannelInput" Width="60" Text="1" Margin="0,0,6,0"/>
                <CheckBox x:Name="InformTimerCheck" Content="Inform Timer" IsChecked="True" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <Button x:Name="SetChannelButton" Content="Set Channel" Width="110" Click="SetChannelButton_OnClick"/>
            </StackPanel>
            <Button x:Name="LoadTimersButton" Content="Load Timers" Width="130" Click="LoadTimersButton_OnClick"/>
        </StackPanel>

        <!-- Status row -->
        <Grid Grid.Row="1" Margin="0,16,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Remote" Margin="0,0,12,0">
                <StackPanel Margin="8">
                    <TextBlock Text="Transport" FontWeight="Bold"/>
                    <TextBlock x:Name="RemoteTransportStats" TextWrapping="Wrap" Margin="0,4,0,8" FontSize="13"/>
                    <TextBlock Text="Serial" FontWeight="Bold"/>
                    <TextBlock x:Name="SerialTransportStats" TextWrapping="Wrap" Margin="0,4,0,8" FontSize="13"/>
                    <TextBlock Text="Snapshot" FontWeight="Bold"/>
                    <TextBlock x:Name="RemoteSnapshotText" TextWrapping="Wrap" Margin="0,4,0,0" FontSize="13"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Timer" Grid.Column="1" Margin="6,0,12,0">
                <StackPanel Margin="8">
                    <TextBlock Text="Transport" FontWeight="Bold"/>
                    <TextBlock x:Name="TimerTransportStats" TextWrapping="Wrap" Margin="0,4,0,8" FontSize="13"/>
                    <TextBlock Text="RSSI" FontWeight="Bold"/>
                    <TextBlock x:Name="TimerRssi" TextWrapping="Wrap" Margin="0,4,0,8" FontSize="13"/>
                    <TextBlock Text="Snapshot" FontWeight="Bold"/>
                    <TextBlock x:Name="TimerSnapshotText" TextWrapping="Wrap" Margin="0,4,0,0" FontSize="13"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Scan Status" Grid.Column="2">
                <StackPanel Margin="8">
                    <TextBlock Text="Overall" FontWeight="Bold"/>
                    <TextBlock x:Name="ScanStatusText" Margin="0,4,0,8" FontSize="13"/>
                    <TextBlock Text="Cycle" FontWeight="Bold"/>
                    <TextBlock x:Name="CycleStatusText" Margin="0,4,0,0" FontSize="13"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Graphs and selection -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.35*"/>
                <ColumnDefinition Width="0.65*"/>
            </Grid.ColumnDefinitions>

            <Grid Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GroupBox Header="Channel Scan" Grid.Row="0">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                            <TextBlock Text="Samples/channel:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="SamplesPerChannelInput" Width="60" Text="5" Margin="0,0,12,0"/>
                            <TextBlock Text="Settle ms:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="SettleDelayInput" Width="60" Text="120" Margin="0,0,12,0"/>
                            <TextBlock Text="Sample ms:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="SampleDelayInput" Width="60" Text="40"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,12">
                            <Button x:Name="StartScanButton" Content="Start Scan" Width="110" Click="StartScanButton_OnClick" Margin="0,0,12,0"/>
                            <Button x:Name="StopScanButton" Content="Stop" Width="90" Click="StopScanButton_OnClick" IsEnabled="False" Margin="0,0,12,0"/>
                            <TextBlock x:Name="SelectionSummaryText" VerticalAlignment="Center" Text="Select one or more timers."/>
                        </StackPanel>
                        <ListView x:Name="TimersList" Grid.Row="2" SelectionMode="Extended">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Content="{Binding DisplayName}" FontSize="13" Checked="TimerCheckBox_OnChanged" Unchecked="TimerCheckBox_OnChanged"/>
                                            <TextBlock Text="{Binding ActiveMarker}" FontSize="12" Foreground="OrangeRed" Margin="8,0,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding ChannelText}" FontSize="12" Foreground="Gray" Margin="24,2,0,0"/>
                                        <TextBlock Text="{Binding MacString}" FontSize="12" Foreground="Gray" Margin="24,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Discovered Timers" Grid.Row="1" Margin="0,16,0,0">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                            <Button x:Name="StartDiscoveryButton" Content="Start Discovery" Width="130" Click="StartDiscoveryButton_OnClick" Margin="0,0,12,0"/>
                            <Button x:Name="StopDiscoveryButton" Content="Stop" Width="90" Click="StopDiscoveryButton_OnClick" Margin="0,0,12,0" IsEnabled="False"/>
                            <Button x:Name="RefreshDiscoveryButton" Content="Refresh" Width="90" Click="RefreshDiscoveryButton_OnClick"/>
                        </StackPanel>
                        <TextBlock x:Name="DiscoveryStatusText" Grid.Row="1" FontSize="12" Foreground="Gray" Text="Discovery idle."/>
                        <ListView x:Name="DiscoveredList" Grid.Row="2" SelectionMode="Single" SelectionChanged="DiscoveredList_OnSelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="13"/>
                                        <TextBlock Text="{Binding PairingText}" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding MetaText}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,12,0,0">
                            <Button x:Name="PairButton" Content="Pair" Width="80" Click="PairButton_OnClick" Margin="0,0,12,0" IsEnabled="False"/>
                            <Button x:Name="UnpairButton" Content="Unpair" Width="80" Click="UnpairButton_OnClick" Margin="0,0,12,0" IsEnabled="False"/>
                            <TextBox x:Name="RenameInput" Width="140" Margin="0,0,12,0"/>
                            <Button x:Name="RenameButton" Content="Rename" Width="90" Click="RenameButton_OnClick" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GroupBox Header="Remote Waterfall" Margin="0,0,0,12">
                    <Border Background="#101018" Padding="8">
                        <Image x:Name="RemoteGraphImage" Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    </Border>
                </GroupBox>
                <GroupBox Header="Timer Waterfall" Grid.Row="1">
                    <Border Background="#101018" Padding="8">
                        <Image x:Name="TimerGraphImage" Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    </Border>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Log output -->
        <TextBox Grid.Row="3" x:Name="LogOutput" Margin="0" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"/>
    </Grid>
</Window>
